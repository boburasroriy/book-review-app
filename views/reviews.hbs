<h1>All Reviews</h1>
<table>
  <thead>
    <tr><th>Title</th><th>Author</th><th>Genre</th><th>Actions</th></tr>
  </thead>
  <tbody>
    {{#each reviews }}
      <tr>
        <td>{{ title }}</td>
        <td>{{ author }}</td>
        <td>{{ genre }}</td>
        <td>
          <a href="/reviews/edit/{{ id }}">Edit</a>
          <form action="/reviews/delete/{{ id }}" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Are you sure?')">Delete</button>
          </form>
        </td>
      </tr>
    {{/each }}
  </tbody>
</table>